FROM ubuntu:16.04
MAINTAINER Piotr Krysik

RUN apt-get update && apt-get install -y \
    pip

RUN pip install PyBOMBS && \
    pybombs auto-config && \
    pybombs recipes add-defaults

RUN pybombs prefix init ~/prefix -a myprefix -R gnuradio-default
RUN pybombs install gr-gsm

COPY ./ /src/
RUN ls /src

RUN mkdir /src/build
WORKDIR /src/build
RUN cmake .. && \
    make && \
    make install && \
    ldconfig && \
    make test
